<div class="container">

	<div class="row red justify-content-center">
		<div class="col-md-10 align-items-center">
			<img src="/assets/burger1.jpg" alt="burger" class="img-responsive">
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-md-10">
			<h1 class="text-center">EAT-DA-BURGER!</h1>
		</div>
	</div>

	<div class="row burger-container justify-content-center">
		{{!-- <div class="col-md-2"></div> --}}
		<div class="col-md-5">
			<h3>FRESHLY MADE BURGERS</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}.{{this.burger_name}}
								<form>	
									<button type='submit' id={{this.id}} class="eat-burger-btn btn btn-default" data-id="{{this.id}}">EAT THIS!</button>
								</form>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-5">
			<h3>DEVOURED BURGERS</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
	<br><br>
	<div class="row">
		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group">
					<textarea type="text" name="name"></textarea><br>
					<button class="btn btn-default" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you are craving and click Submit!</h5>
				</div>
			</form>
		</div>
	</div>
</div>