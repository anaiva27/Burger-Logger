<div class="container">
{{!-- header and image containers --}}
	<div class="row justify-content-center">
		<div class="col-md-10 align-items-center">
			<img src="/assets/burger1.jpg" alt="burger" class="img-responsive">
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-10">
			<h1 class="text-center">EAT-DA-BURGER!</h1>
		</div>
	</div>

	<div class="row burger-container justify-content-center">
		<div class="col-md-5">
			<h3>FRESHLY MADE BURGERS</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}.{{this.burger_name}}
									<button type='submit' id={{this.id}} class="eat-burger-btn btn btn-danger" data-id="{{this.id}}">DEVOUR!</button>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-5">
			<h3>DEVOURED BURGERS</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div>
					<textarea type="text" placeholder="Type..." name="name"></textarea><br>
					<button class="btn btn-danger" type="submit">Add to the menu</button>
					<h5 class="text-center">Invent a burger you are craving and click the button!</h5>
				</div>
			</form>
		</div>
	</div>
</div>